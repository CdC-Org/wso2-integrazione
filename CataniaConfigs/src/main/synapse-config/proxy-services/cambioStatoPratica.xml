<?xml version="1.0" encoding="UTF-8"?>
<proxy name="cambioStatoPratica" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <endpoint name="endpoint_urn_uuid_97b72a79-6507-4b7b-9d46-1d3e6e07931c">
            <address uri="$FILE:cambioStatoPraticaEP">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>1</progressionFactor>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </address>
            <property name="NO_KEEPALIVE" scope="axis2" value="true"/>
        </endpoint>
        <inSequence>
            <script language="js"><![CDATA[var plInput = mc.getPayloadJSON();
				var log = mc.getServiceLog();
				log.info("cambioStatoPratica Payload: " + JSON.stringify(plInput));
				var localRespinta = true;
               	var	localConclusa = true;
               	
               	if (plInput.stato == 1)	{
               		localRespinta = false;
               		localConclusa = false;
               	}
               	if (plInput.stato == 2)	{
               		localRespinta = false;
               		localConclusa = true;
               	}
               	if (plInput.stato == 3)	{
               		localRespinta = true;
               		localConclusa = false;
               	}
                
                var keys = Object.keys(plInput);
                var response = {
                            "key": 		plInput.key,
                            "id":  		plInput.id,
                            "motivo": 	plInput.motivo,
                            "respinta": localRespinta,
							"conclusa": localConclusa
                };
               
               mc.setPayloadJSON(response);]]></script>
        </inSequence>
        <outSequence>
            <datamapper config="gov:datamapper/InterpretazioneRitornoCambioStatoPratica.dmc" inputSchema="gov:datamapper/InterpretazioneRitornoCambioStatoPratica_inputSchema.json" inputType="JSON" outputSchema="gov:datamapper/InterpretazioneRitornoCambioStatoPratica_outputSchema.json" outputType="JSON" xsltStyleSheet="gov:datamapper/InterpretazioneRitornoCambioStatoPratica_xsltStyleSheet.xml"/>
            <send/>
        </outSequence>
        <faultSequence>
            <log category="ERROR" description="Log Errore" level="custom">
                <property name="text" value="An unexpected error occured"/>
                <property expression="get-property('ERROR_MESSAGE')" name="message"/>
            </log>
            <payloadFactory media-type="json">
                <format>
                  {
                    "payload": {
                      "esito": "1"
                    },
                    "outcome": {
                      "issue": [
                        {
                          "severity": "FATAL",
                          "code": "$1",
                          "message": "$2"
                        }
                      ]
                    }
                  }
                </format>
                <args>
                    <arg evaluator="xml" expression="get-property('ERROR_CODE')"/>
                    <arg evaluator="xml" expression="get-property('ERROR_MESSAGE')"/>
                </args>
            </payloadFactory>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200"/>
            <respond description="Send Error Back to Client"/>
        </faultSequence>
    </target>
</proxy>
