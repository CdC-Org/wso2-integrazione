<?xml version="1.0" encoding="UTF-8"?>
<proxy name="avvisiIstanze" startOnLoad="true" transports="http https" xmlns="http://ws.apache.org/ns/synapse">
    <target>
        <endpoint name="avvisiIstanzeEP">
            <address uri="$FILE:avvisiIstanzeEP">
                <suspendOnFailure>
                    <initialDuration>-1</initialDuration>
                    <progressionFactor>1</progressionFactor>
                </suspendOnFailure>
                <markForSuspension>
                    <retriesBeforeSuspension>0</retriesBeforeSuspension>
                </markForSuspension>
            </address>
            <property name="NO_KEEPALIVE" scope="axis2" value="true"/>
        </endpoint>
        <inSequence>
            <script language="js"><![CDATA[var plInput = mc.getPayloadJSON();
				var log = mc.getServiceLog();
				log.info("avvisiIstanze Payload: " + JSON.stringify(plInput));

                var response = {
                    "key": plInput.key,
                    "avvisiIstanze": plInput.avvisiIstanze,
                };
               log.info("avvisiIstanze response: " + JSON.stringify(response));
               mc.setPayloadJSON(response);]]></script>
        </inSequence>
        <outSequence>
            <datamapper config="gov:datamapper/avvisiIstanzeDataMapper.dmc" inputSchema="gov:datamapper/avvisiIstanzeDataMapper_inputSchema.json" inputType="XML" outputSchema="gov:datamapper/avvisiIstanzeDataMapper_outputSchema.json" outputType="XML" xsltStyleSheet="gov:datamapper/avvisiIstanzeDataMapper_xsltStyleSheet.xml"/>
            <send/>
        </outSequence>
        <faultSequence>
            <log category="ERROR" description="Log Errore" level="custom">
                <property name="text" value="An unexpected error occured"/>
                <property expression="get-property('ERROR_MESSAGE')" name="message"/>
            </log>
            <payloadFactory media-type="json">
                <format>
                  {
                    "payload": {
                      "esito": "1"
                    },
                    "outcome": {
                      "issue": [
                        {
                          "severity": "FATAL",
                          "code": "$1",
                          "message": "$2"
                        }
                      ]
                    }
                  }
                </format>
                <args>
                    <arg evaluator="xml" expression="get-property('ERROR_CODE')"/>
                    <arg evaluator="xml" expression="get-property('ERROR_MESSAGE')"/>
                </args>
            </payloadFactory>
            <property name="HTTP_SC" scope="axis2" type="STRING" value="200"/>
            <respond description="Send Error Back to Client"/>
        </faultSequence>
    </target>
</proxy>
